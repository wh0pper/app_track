<% if current_user.resume_file_name != nil  %>
  <a href="<%= current_user.resume.url %>">View your résumé</a>
<% else %>
  No résumé uploaded. Edit profile to add.
<% end %>

<h1>Jobs List:</h1>
<h6>Filter by:</h6>
<%= link_to 'most steps remaining', filter_jobs_path(:most) %> |
<%= link_to 'fewest steps remaining', filter_jobs_path(:fewest) %> |
<%= link_to 'recently added', filter_jobs_path(:recent) %>

<ul class="list-group">
  <% @jobs.each do |job| %>
    <li class="list-group-item"><%= link_to job.title, job_path(job) %></li>
  <% end %>
</ul>
<hr>

<h4>Add a new job:</h4>
<%= render "jobs/form" %>
